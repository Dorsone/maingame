include ./_mixins
include ./_data

<!DOCTYPE html>
html(lang="ru")
    head
        +metahead
        title 404
        include ./_styles
    body
        include _header

        main
            section.section
                .container.container__sm
                    .not-found
                        .not-found__title 404
                        .title-line
                            +title('h1', 'h1', 'Что-то пошло не так')
                        .sentence Этой страницы более не существует.  Но это не Game Over, вы можете найти что-то интересное.
                        form(action='/').form.form-line
                            input(type='text' placeholder='Поиск по сайту')
                            button
                                +icon('search')

            section.section
                .container.container__sm
                    .title-line
                        +title('h2', 'div', 'Похожие статьи')
                    .col-two
                        - for (var i = 0; i < 6; i ++)
                            a(href=empty_url).item-block.col
                                .item-block__desc
                                    .item-block__info
                                        span
                                            +icon('eye')
                                            | 1,247
                                        span
                                            +icon('comment')
                                            | 15
                                    .item-block__title В ожидании финала зимней лиги DPC 2021
                                    .item-block__date 12.02.21
                                    .item-block__time читать 15 мин




        include _footer
        include ./_scripts

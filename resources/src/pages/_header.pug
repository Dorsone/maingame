header.header
    .container
        .header-content
            a(href='index.html').header-logo
                +img('logo.svg')
            nav.header-nav
                a(href=empty_url)
                    .header-nav--icon
                        +img('head1.svg')
                    .header-nav--title
                        p Медиа
                        span Новости из мира игровой индустрии
                a(href=empty_url)
                    .header-nav--icon
                        +img('head2.svg')
                    .header-nav--title
                        p Онлайн академия
                        span Обучение киберспорту и всякое
                a(href=empty_url)
                    .header-nav--icon
                        +img('head3.svg')
                    .header-nav--title
                        p Турнирная платформа
                        span Чемпионы киберспорта
            .header-search.header-icon
                +icon('search')
            .header-enter.header-icon
                +icon('enter')
            .search
                form(action='/').form
                    input(type='text' placeholder='Поиск по сайту')
                    button
                        +icon('search')
                .search-close
                    +icon('close')


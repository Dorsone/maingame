include ./_mixins
include ./_data


-
    var bread = [
        {
            name:"Главная",
            href:"index.html"
        },
        {
            name:"Search",
            href:"search.html"
        }
    ]

<!DOCTYPE html>
html(lang="ru")
    head
        +metahead
        title Search
        include ./_styles
    body
        include _header

        main
            +breadcrumbs(bread)
            section.section
                .container.container__sm
                    .search-block
                        .title-line
                            +title('h1', 'h1', 'Поиск')
                        form(action='/').form.form-line
                            input(type='text' placeholder='Поиск по сайту')
                            button
                                +icon('search')
                    .search-result
                        +title('h3', 'h3', 'По запросу “Контра” ничего не найдено')
                        .search-result-empty
                            .sentence Попробуйте популярные затросы:
                            a(href=empty_url) CS
                            a(href=empty_url) Обновления
                            a(href=empty_url) Коды на GTA
                            a(href=empty_url) Кроссплатформенность


        include _footer
        include ./_scripts
